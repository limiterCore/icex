{% extends 'parts/layout-advertisers.twig' %}

{% block title %}
	<title>New Add Advertisers - ICEX Media</title>
{% endblock %}


{% block content %}
{#NEW ADD ADVERTISERS#}
	<div class="std-adv js-page"  style="background-image: url(img/contact-us-bg.jpg)">
		<div class="std-adv__container container">
			<h1 class="std-adv__title">Create a New Ad</h1>
			<div class="std-adv__content std-adv__content_center">
				<div class="form">
					<form>
						<div class="form__input-container js-form-input-container">
							<div class="form__input-text-wrap form__input-text-wrap_account">
								<label for="adv-new-title" class="form__input-text js-input-text">Title</label>
								<p class="form__input-under-text">For your reference</p>
							</div>
							<div class="form__input-holder">
								<input id="adv-new-title" type="text" class="form__input js-form-input">
							</div>
						</div>
						<div class="form__input-container">
							<div class="form__input-text-wrap form__input-text-wrap_account">
								<label for="adv-new-show" class="form__input-text js-input-text">Show another zone:</label>
							</div>
							<div class="form__select-holder">
								<select id="adv-new-show" class="form__select">
									<option value="1">Banners Full Size 468x60 - Keywords</option>
									<option value="2">Banners Full Size 468x60 - Keywords</option>
									<option value="3">Banners Full Size 468x60 - Keywords</option>
									<option value="4">Banners Full Size 468x60 - Keywords</option>
								</select>
							</div>
						</div>

						<div class="form__input-container">
							<div class="form__pad-right js-form-tab-parent">
								<div class="form__tab-container">

									{#DROP-ZONE#}
									<div class="form__tab js-form-tab js-form-tab_file">
										<div class="drop form__drop js-drop">
											<div class="drop__content js-upload-button">
												<div class="drop__content-before js-upload-before">
													<i class="drop__icon"></i>
													<p class="drop__title">
														Drop a file here or click to upload
													</p>
													<p class="drop__max-size">
														Maximum upload size: 100MB
													</p>
												</div>
												<div class="drop__content-after js-upload-after"></div>
											</div>
											<input type="file" class="form__upload js-upload-input">
										</div>
									</div>
									{#/DROP-ZONE#}

									{#CODE#}
									<div class="form__tab js-form-tab js-form-tab_code">
										<textarea class="form__textarea form__textarea_code" placeholder="Paste code here"></textarea>
									</div>
									{#/CODE#}

								</div>
								<div class="form__tab-links">
									<a href="#" class="form__tab-link form__tab-link_active js-form-tab-link" data-tab="file" data-linked-input="#type" data-linked-value="IMG">File</a>
									<a href="#" class="form__tab-link js-form-tab-link" data-tab="code" data-linked-input="#type" data-linked-value="HTML">Code</a>
								</div>
							</div>
						</div>

						<input type="hidden" name="type" value="IMG" id="type">

						<div class="form__submit-container">
							<div class="form__submit-holder form__submit-holder_account">
								<button class="form__submit btn">continue</button>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
{#/NEW ADD ADVERTISERS#}
{% endblock %}
