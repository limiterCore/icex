{% extends 'parts/layout-guest.twig' %}

{% block title %}
	<title>Contact us - ICEX Media</title>
{% endblock %}

{% block header %}
	{#HEADER#}
	<div class="header header_grey" id="header">
		<div class="header__container container">


			{#BURGER#}
			<div class="header__burger" id="burger">
				<div class="header__burger-line"></div>
				<div class="header__burger-line"></div>
				<div class="header__burger-line"></div>
			</div>
			{#/BURGER#}

			{#LEFT PART#}
			<div class="header__left-part">
				{#LOGO#}
				<a href="#" class="header__logo">
					<img src="img/logo-mobile.svg" alt="" class="header__logo-img">
				</a>
				{#/LOGO#}
				{#NAV#}
				<nav class="header__nav" id="nav">
					<div class="header__nav-logo-wrap">
						<a href="/" class="header__nav-logo"></a>
					</div>


					<a href="#" class="header__nav-item">Home</a>
					<a href="#" class="header__nav-item">Advertisers</a>
					<a href="#" class="header__nav-item">Publishers</a>
					<a href="#" class="header__nav-item">Statistic</a>
					<a href="#" class="header__nav-item">Contact Us</a>
				</nav>
				{#/NAV#}
			</div>
			{#/LEFT PART#}

			<a href="#" class="header__login">
				<i class="header__login-icon"></i>
				<span class="header__login-text">Login</span>
			</a>
		</div>
	</div>
	{#/HEADER#}
{% endblock %}


{% block content %}
	{#CONTACT US#}
	<div class="contact-us" style="background-image: url(img/contact-us-bg.jpg)">
		<div class="contact-us__container container">
			<h1 class="contact-us__title">Contact Us</h1>
			<div class="contact-us__content">
				<div class="guest-form">
					<form>
						<div class="guest-form__line">
							<div class="guest-form__line-title-wrap">
								<label for="g-con-name" class="guest-form__line-title guest-form__line-title_required">Name</label>
							</div>
							<div class="guest-form__input-holder">
								<input id="g-con-name" type="text" class="guest-form__input" placeholder="Name">
							</div>
						</div>
						<div class="guest-form__line">
							<div class="guest-form__line-title-wrap">
								<label for="g-con-email" class="guest-form__line-title guest-form__line-title_required">E-mail</label>
							</div>
							<div class="guest-form__input-holder">
								<input id="g-con-email" type="text" class="guest-form__input" placeholder="E-mail">
							</div>
						</div>
						<div class="guest-form__line">
							<div class="guest-form__line-title-wrap">
								<label for="g-con-message" class="guest-form__line-title guest-form__line-title_required">Message</label>
							</div>
							<div class="guest-form__textarea-holder">
								<textarea id="g-con-message"" cols="30" rows="10" class="guest-form__textarea" placeholder="Your message"></textarea>
							</div>
						</div>
						<div class="guest-form__line guest-form__line_submit">
							<div class="guest-form__submit-holder">
								<button class="guest-form__submit" type="submit">submit</button>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
	{#/CONTACT US#}
{% endblock %}
