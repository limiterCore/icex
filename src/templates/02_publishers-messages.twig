
{% extends 'parts/layout-publishers.twig' %}

{% block title %}
	<title>Publisher messages</title>
{% endblock %}


{% block content %}

	{#MESSAGES#}
	<div class="publishers">
		<div class="publishers__bg" style="background-image: url(img/publish_bg.jpg)">
			<div class="publishers__bg-darken">
				<div class="publishers__inner container-publishers">
					<div class="publishers__block">
						<div class="publishers__title">Send a New Message to Admin</div>

						{#FORM#}
						<div class="publishers__form">
							<form>
								<div class="form__input-container">
									<div class="form__input-text-wrap">
										<span class="form__input-text">Title</span>
									</div>
									<div class="form__input-holder">
										<input type="text" class="form__input" placeholder="Title">
									</div>
								</div>
								<div class="form__input-container">
									<div class="form__input-text-wrap">
										<span class="form__input-text">Text</span>
									</div>
									<div class="form__input-holder">
										<textarea class="form__textarea" placeholder="Text"></textarea>
									</div>
								</div>
								<div class="form__input-container">
									<div class="form__input-text-wrap">
										<span class="form__input-text"></span>
									</div>
									<div class="form__input-holder">
										<button type="submit" class="form__submit btn">
											submit
										</button>
									</div>
								</div>

							</form>
						</div>
						{#/FORM#}

					</div>
					<div class="publishers__block">
						<div class="publishers__title">Existing Messages</div>

						{#TABLE#}
						<div class="publishers__table">
							<div class="publishers__table-block publishers__table-block_mesages">
								<p class="publishers__table-block-no-messages">No one message is available</p>
							</div>
						</div>
						{#/TABLE#}

					</div>
				</div>
			</div>
		</div>
	</div>
	{#/MESSAGES#}

{% endblock %}
