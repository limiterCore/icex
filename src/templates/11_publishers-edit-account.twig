
{% extends 'parts/layout-publishers.twig' %}

{% block title %}
	<title>Publisher Edit Account</title>
{% endblock %}


{% block content %}

	{#EDIT ACCOUNT#}
	<div class="publishers js-page">
		<div class="publishers__bg" style="background-image: url(img/publish_bg.jpg)">
			<div class="publishers__bg-darken">
				<div class="publishers__inner container-publishers">
					<div class="publishers__block">
						<h1 class="publishers__title">Your Account Data</h1>

						{#FORM#}
						<div class="publishers__form publishers__form_edit-account">
							<form>
								<label class="form__input-container js-form-input-container">
									<div class="form__input-text-wrap form__input-text-wrap_account">
										<p class="form__input-text js-input-text form__input-text_required">Name</p>
									</div>
									<div class="form__input-holder">
										<input type="text" class="form__input js-form-input">
									</div>
								</label>
								<label class="form__input-container js-form-input-container">
									<div class="form__input-text-wrap form__input-text-wrap_account">
										<p class="form__input-text js-input-text form__input-text_required">E-mail</p>
									</div>
									<div class="form__input-holder">
										<input type="text" class="form__input js-form-input">
									</div>
								</label>
								<label class="form__input-container js-form-input-container">
									<div class="form__input-text-wrap form__input-text-wrap_account">
										<p class="form__input-text js-input-text">Password</p>
										<p class="form__input-under-text">Keep it blank to use the current password</p>
									</div>
									<div class="form__input-holder">
										<input type="password" class="form__input js-form-input">
									</div>
								</label>
								<label class="form__input-container js-form-input-container">
									<div class="form__input-text-wrap form__input-text-wrap_account">
										<p class="form__input-text js-input-text">Company name</p>
									</div>
									<div class="form__input-holder">
										<input type="text" class="form__input js-form-input">
									</div>
								</label>
								<label class="form__input-container js-form-input-container">
									<div class="form__input-text-wrap form__input-text-wrap_account">
										<p class="form__input-text js-input-text">Business ID</p>
									</div>
									<div class="form__input-holder">
										<input type="text" class="form__input js-form-input">
									</div>
								</label>
								<label class="form__input-container js-form-input-container">
									<div class="form__input-text-wrap form__input-text-wrap_account">
										<p class="form__input-text js-input-text">City</p>
									</div>
									<div class="form__input-holder">
										<input type="text" class="form__input js-form-input">
									</div>
								</label>
								<label class="form__input-container js-form-input-container">
									<div class="form__input-text-wrap form__input-text-wrap_account">
										<p class="form__input-text js-input-text">Country</p>
									</div>
									<div class="form__input-holder">
										<input type="text" class="form__input js-form-input">
									</div>
								</label>
								<label class="form__input-container js-form-input-container">
									<div class="form__input-text-wrap form__input-text-wrap_account">
										<p class="form__input-text js-input-text">Phone number</p>
									</div>
									<div class="form__input-holder">
										<input type="text" class="form__input js-form-input">
									</div>
								</label>
								<label class="form__input-container js-form-input-container">
									<div class="form__input-text-wrap form__input-text-wrap_account">
										<p class="form__input-text js-input-text">Payment method</p>
									</div>
									<div class="form__input-holder">
										<input type="text" class="form__input js-form-input">
									</div>
								</label>
								<label class="form__input-container js-form-input-container">
									<div class="form__input-text-wrap form__input-text-wrap_account">
										<p class="form__input-text js-input-text">Payment details</p>
										<p class="form__input-under-text">
											For example bank account info, Paypal email address, name on a check etc.
										</p>
									</div>
									<div class="form__input-holder">
										<textarea class="form__textarea form__textarea_publishers js-form-input"></textarea>
									</div>
								</label>
								<div class="form__input-container">
									<div class="form__input-text-wrap form__input-text-wrap_account">
										<span class="form__input-text">Payment method</span>
									</div>
									<div class="form__select-holder">
										<select class="form__select">
											<option value="1">Check</option>
											<option value="2">Check</option>
											<option value="3">Check</option>
											<option value="4">Check</option>
										</select>
									</div>
								</div>
								<div class="form__input-container js-form-input-container">
									<label for="acc-minimum" class="form__input-text-wrap form__input-text-wrap_account">
										<p class="form__input-text js-input-text">Minimum payment</p>
										<p class="form__input-under-text">Minimum is $50</p>
									</label>

									<div class="form__input-wrap">
										<div class="form__input-holder form__input-holder_mini">
											<input id="acc-minimum" type="text" class="form__input" placeholder="0">
										</div>
										<label class="form__block">
											<input type="checkbox" class="js-checkbox checkbox-styled">
											<span class="form__checkbox-text">Hold next payment</span>
										</label>
									</div>

								</div>
								<label class="form__input-container js-form-input-container">
									<div class="form__input-text-wrap form__input-text-wrap_account">
										<p class="form__input-text js-input-text">Never show ads of advertisers</p>
										<p class="form__input-under-text">
											Enter usernames (separated by commas) of advertisers whose ads should never be displayed on your site.
										</p>
									</div>
									<div class="form__input-holder">
										<textarea class="form__textarea form__textarea_publishers js-form-input"></textarea>
									</div>
								</label>

								<div class="form__input-container">
									<div class="form__input-text-wrap form__input-text-wrap_account">
										<p class="form__input-text js-input-text">Style</p>
									</div>
									<div class="form__select-holder">
										<select class="form__select">
											<option class="form__input-select-option">Silver</option>
											<option class="form__input-select-option">Other Silver</option>
											<option class="form__input-select-option">Not Silver</option>
											<option class="form__input-select-option">Some Silver</option>
										</select>
									</div>
								</div>
								<div class="form__submit-container">
									<div class="form__submit-holder form__submit-holder_account">
										<button type="submit" class="form__submit btn">
											submit
										</button>
									</div>
								</div>

							</form>
						</div>
						{#/FORM#}

					</div>
				</div>
			</div>
		</div>
	</div>
	{#/EDIT ACCOUNT#}

{% endblock %}