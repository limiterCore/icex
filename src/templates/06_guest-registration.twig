{% extends 'parts/layout.twig' %}

{% block title %}
	<title>Guest registration - ICEX Media</title>
{% endblock %}

{% block header %}
	{#HEADER#}
	<div class="header header_grey">
		<div class="header__container container">


			{#BURGER#}
			<div class="header__burger" id="burger">
				<div class="header__burger-line"></div>
				<div class="header__burger-line"></div>
				<div class="header__burger-line"></div>
			</div>
			{#/BURGER#}

			{#LEFT PART#}
			<div class="header__left-part">
				{#LOGO#}
				<a href="#" class="header__logo">
					<img src="img/logo-mobile.svg" alt="" class="header__logo-img">
				</a>
				{#/LOGO#}
				{#NAV#}
				<nav class="header__nav" id="nav">
					<div class="header__nav-logo-wrap">
						<a href="/" class="header__nav-logo"></a>
					</div>


					<a href="#" class="header__nav-item">Home</a>
					<a href="#" class="header__nav-item">Advertisers</a>
					<a href="#" class="header__nav-item">Publishers</a>
					<a href="#" class="header__nav-item">Statistic</a>
					<a href="#" class="header__nav-item">Contact Us</a>
				</nav>
				{#/NAV#}
			</div>
			{#/LEFT PART#}

			<a href="#" class="header__login">
				<i class="header__login-icon"></i>
				<span class="header__login-text">Login</span>
			</a>
		</div>
	</div>
	{#/HEADER#}
{% endblock %}


{% block content %}
	{#GUEST REGISTRATION#}
	<div class="guest-reg" style="background-image: url(img/contact-us-bg.jpg)">
		<div class="guest-reg__container container">
			<h1 class="guest-reg__title">Publishers - Signup</h1>
			<div class="guest-reg__content">
				<div class="guest-form">
					<form>
						<div class="guest-form__line">
							<div class="guest-form__line-title-wrap">
								<p class="guest-form__line-title guest-form__line-title_required">Username</p>
							</div>
							<div class="guest-form__input-holder">
								<input type="text" class="guest-form__input" placeholder="Username">
							</div>
						</div>
						<div class="guest-form__line">
							<div class="guest-form__line-title-wrap">
								<p class="guest-form__line-title guest-form__line-title_required">Password</p>
							</div>
							<div class="guest-form__input-holder">
								<input type="text" class="guest-form__input" placeholder="Password">
							</div>
						</div>
						<div class="guest-form__line">
							<div class="guest-form__line-title-wrap">
								<p class="guest-form__line-title guest-form__line-title_required">E-mail</p>
							</div>
							<div class="guest-form__input-holder">
								<input type="text" class="guest-form__input" placeholder="E-mail">
							</div>
						</div>
						<div class="guest-form__line">
							<div class="guest-form__line-title-wrap">
								<p class="guest-form__line-title guest-form__line-title_required">Name</p>
							</div>
							<div class="guest-form__input-holder">
								<input type="text" class="guest-form__input" placeholder="Name">
							</div>
						</div>
						<div class="guest-form__line">
							<div class="guest-form__line-title-wrap">
								<p class="guest-form__line-title">Company Name</p>
							</div>
							<div class="guest-form__input-holder">
								<input type="text" class="guest-form__input" placeholder="Company Name">
							</div>
						</div>
						<div class="guest-form__line">
							<div class="guest-form__line-title-wrap">
								<p class="guest-form__line-title">City</p>
							</div>
							<div class="guest-form__input-holder">
								<input type="text" class="guest-form__input" placeholder="City">
							</div>
						</div>
						<div class="guest-form__line">
							<div class="guest-form__line-title-wrap">
								<p class="guest-form__line-title">Country</p>
							</div>
							<div class="guest-form__input-holder">
								<input type="text" class="guest-form__input" placeholder="Country">
							</div>
						</div>
						<div class="guest-form__line">
							<div class="guest-form__line-title-wrap">
								<p class="guest-form__line-title">Phone</p>
							</div>
							<div class="guest-form__input-holder">
								<input type="text" class="guest-form__input" placeholder="Phone">
							</div>
						</div>
						<div class="guest-form__line guest-form__line_checkbox">
							<div class="guest-form__checkbox-holder">
								<input type="checkbox" class="checkbox-styled js-checkbox">
								<div class="guest-form__checkbox-text">
									I have read and agree to
									<a href="#" class="guest-form__checkbox-link">Rules</a>
								</div>
							</div>
						</div>
						<div class="guest-form__line guest-form__line_submit">
							<div class="guest-form__submit-holder">
								<button class="guest-form__submit" type="submit">submit</button>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
	{#/GUEST REGISTRATION#}
{% endblock %}
